<!-- Setup to have the template that Handlebars can render onto
        Create a button that will submit user input into the database -->

<h1><img src="../public/assets/img/burger.png" type="image/png">Eat-Da-Burger!</h1>

<div class='burgerList'>
    <div class='toDevour'>
        <h2 class='tableTitle'>Burgers to Devour!</h2>
        <ul class='tableList'>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class='burgersDevoured'>
        <h2 class='tableTitle'>Devoured!</h2>
        <ul class='tableList'>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class='createABurger'>
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="bg">Burger Name:</label>
            <input type="text" id="bg" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>